doctype 5
html(lang="en")
  head
    title Chatter
    != css('application')
    != js('application')
  body
    .container
      .row
        h1.text-center Chatter
    .container
      .row
        .col-md-6.col-md-offset-3
          if error_messages.length > 0
            .alert.alert-warning
              for message in error_messages
                p= message
          if info_messages.length > 0
            .alert.alert-info
              for message in info_messages
                p= message
    != body