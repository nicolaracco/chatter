doctype 5
html(lang="en")
  head
    title Chatter
    != css('application')
    != js('application')
  body
    .container
      .row
        h1.text-center Chatter
    .container
      .row
        .col-md-6.col-md-offset-3
          if has_alerts
            .alert.alert-warning
              for message in alerts
                p= message
          if has_notices
            .alert.alert-info
              for message in notices
                p= message
    != body