.container
  .row
    .col-md-6.col-md-offset-3
      form(role="form" method="POST" action="/login")
        .form-group
          label(for="email-input") Email Address
          input#email-input.form-control(type="email" placeholder="Enter email" name="username" required="true")
        .form-group
          label(for="password-input") Password
          input#password-input.form-control(type="password" placeholder="Password" name="password" required="true")
        button.btn.btn-default(type="submit") Log In