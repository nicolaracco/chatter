gray-color = #999999

html, body
  overflow: hidden

a[disabled="disabled"]
  color: gray-color

html, body, #pages, .page, .main-scroller, .page > .row
  height: 100%

body
  padding-top   : 70px
  padding-bottom: 70px

.nav > li .close
  margin   : -2px 0 0 10px
  font-size: 18px
  float    : none

.page:not(.active)
  display: none

.main-scroller
  overflow-y: scroll

.log-output
  width: 100%

  article.log-entry
    display: table-row
    width  : 100%

    &.type-action
      color: gray-color

    &:nth-child(even)
      background-color: #f9f9f9

    &.type-joined, &.type-left
      color: gray-color

    section
      display     : table-cell
      width       : 100%
      line-height : 1.6em
      padding     : 3px 0

      &.timestamp
        width: 2em
        padding: 0 5px 0 10px

      &.user
        width: 6em
        padding: 0 10px 0 5px